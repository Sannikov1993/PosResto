{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Gradual migration from JS to TS */
    "allowJs": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["resources/js/*"],
      "@/shared/*": ["resources/js/shared/*"],
      "@/pos/*": ["resources/js/pos/*"],
      "@/kitchen/*": ["resources/js/kitchen/*"],
      "@/waiter/*": ["resources/js/waiter/*"],
      "@/backoffice/*": ["resources/js/backoffice/*"],
      "@/courier/*": ["resources/js/courier/*"],
      "@/admin/*": ["resources/js/admin/*"],
      "@/reservations/*": ["resources/js/reservations/*"],
      "@/table-order/*": ["resources/js/table-order/*"],
      "@/floor-editor/*": ["resources/js/floor-editor/*"],
      "@/guest-admin/*": ["resources/js/guest-admin/*"],
      "@/guest-menu/*": ["resources/js/guest-menu/*"],
      "@/realtime-monitor/*": ["resources/js/realtime-monitor/*"],
      "@/tracking/*": ["resources/js/tracking/*"],
      "@/order-board/*": ["resources/js/order-board/*"],
      "@/cabinet/*": ["resources/js/cabinet/*"],
      "@/home/*": ["resources/js/home/*"],
      "@/register/*": ["resources/js/register/*"],
      "@/register-tenant/*": ["resources/js/register-tenant/*"]
    },

    /* Types */
    "types": ["vite/client", "node"]
  },
  "include": [
    "resources/js/**/*.ts",
    "resources/js/**/*.tsx",
    "resources/js/**/*.vue",
    "resources/js/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "public"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
